<% if defined?(table_type) && table_type == "row_column" %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">UID</th>
        <th scope="col">ID Serial</th>
        <th scope="col">開始工作時間</th>
        <th scope="col">開始工作飄移分鐘數</th>
        <th scope="col">結束工作時間</th>
        <th scope="col">結束飄移分鐘數</th>
        <th scope="col">開啟服務狀態</th>
        <th scope="col">開啟GPS定位</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"><%= punch_setting.uid %></th>
        <th scope="row"><%= punch_setting.mask_id_serial %></th>
        <th scope="row"><%= punch_setting.start_work_time %></th>
        <th scope="row"><%= punch_setting.start_work_padding_percentage %></th>
        <th scope="row"><%= punch_setting.end_work_time %></th>
        <th scope="row"><%= punch_setting.end_work_padding_percentage %></th>
        <th scope="row"><%= t("enum.punch_setting.status.#{punch_setting.status}") %></th>
        <th scope="row"><%= t("enum.punch_setting.status.#{punch_setting.geo_status}") %></th>
        <th scope="row"><%= link_to("Edit", edit_punch_setting_path, class: "btn btn-sm btn-primary") %></th>
      </tr>
    </tbody>
  </table>
<% else %>
  <table class="table table-striped table-bordered">
    <colgroup>
      <col style="width: 200px;">
      <col style="">
    </colgroup>
    <tbody>
      <tr>
        <th>UID</th>
        <td class="text-left"><%= punch_setting.uid %></td>
      </tr>
      <tr>
        <th>ID Serial</th>
        <td class="text-left"><%= punch_setting.mask_id_serial %></td>
      </tr>
      <tr>
        <th>開始工作時間</th>
        <td class="text-left"><%= punch_setting.start_work_time %></td>
      </tr>
      <tr>
        <th>開始工作飄移分鐘數</th>
        <td class="text-left"><%= punch_setting.start_work_padding_percentage %></td>
      </tr>
      <tr>
        <th>結束工作時間</th>
        <td class="text-left"><%= punch_setting.end_work_time %></td>
      </tr>
      <tr>
        <th>結束飄移分鐘數</th>
        <td class="text-left"><%= punch_setting.end_work_padding_percentage %></td>
      </tr>
      <tr>
        <th>開啟服務狀態</th>
        <td class="text-left">
          <span class="<%= render_state_class(PunchSetting.statuses[punch_setting.status]) %>">
            <%= I18n.t("enum.punch_setting.status.#{punch_setting.status}") %>
          </span>
        </td>
      </tr>
      <tr>
        <th>開啟GPS定位</th>
        <td class="text-left">
          <span class="<%= render_state_class(PunchSetting.geo_statuses[punch_setting.geo_status]) %>">
            <%= I18n.t("enum.punch_setting.status.#{punch_setting.geo_status}") %>
          </span>
        </td>
      </tr>
      <tr>
        <th>操作</th>
        <td class="text-left"><%= link_to("修改", edit_punch_setting_path, class: "btn btn-sm btn-primary") %></td>
      </tr>
    </tbody>
  </table>
<% end %>